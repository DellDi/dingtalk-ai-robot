# 钉钉开放平台配置
DINGTALK_APP_ID=your_app_id
DINGTALK_CLIENT_ID=your_app_id
DINGTALK_CLIENT_SECRET=your_app_secret
DINGTALK_ROBOT_CODE=your_robot_code

# FastAPI配置
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true

# JIRA配置
JIRA_URL=https://your-domain.atlassian.net
JIRA_USERNAME=your_email@example.com
JIRA_API_TOKEN=your_api_token
JIRA_PROJECT_KEY=PROJECT

# AI服务配置
OPENAI_API_KEY=your_openai_api_key
# 知识库配置
VECTOR_DB_TYPE=chroma  # 支持：chroma, qdrant, faiss等
VECTOR_DB_PATH=./chroma_data/vector_db
CHROMA_DEFAULT_K=20
CHROMA_DEFAULT_SCORE_THRESHOLD=0.2

# 文档切片配置
MAX_CHUNK_CHAR=1500
WINDOW=1200
OVERLAP=100

# 天气配置
OPENWEATHER_API_KEY=your_openweather_api_key

# SSH配置
SSH_HOSTS=host1,host2,host3
SSH_USERNAME=your_ssh_username
SSH_KEY_PATH=~/.ssh/id_rsa
SSH_DEFAULT_HOST=192.168.1.128
# 或者使用密码（不推荐）
SSH_PASSWORD=your_ssh_password

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
